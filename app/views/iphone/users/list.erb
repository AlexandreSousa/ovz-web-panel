<ul class="pageitem">
  <% @users.each do |user| %>
    <li class="textbox">
      <span class="header">
        <% icon = user.enabled ? 'run.png' : 'stop.png' %>
        <%= '<img class="inline" src="/images/' + icon + '"/>' %>
        <%= h(user.full_name) %>
      </span>
      <% if !user.email.blank? %>
        <a href="mailto:<%= h(user.email) %>"><%= h(user.email) %></a><br>
      <% end %>
      <%= t('admin.users.role.' + (1 == user.role_type ? 'infrastructure_admin' : 'virtual_server_owner')) %>
    </li>
  <% end %>
</ul>