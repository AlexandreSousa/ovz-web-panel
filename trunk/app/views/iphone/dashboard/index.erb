<ul class="pageitem">
  <% if @current_user.superadmin? %>
    <%= imenu_link_to(t('admin.dashboard.stats_grid.title'), { :controller => "dashboard", :action => "stats" }) %>
    <%= imenu_link_to(t('admin.menu.general.hardware_servers'), { :controller => "hardware_servers", :action => "list" }) %>
    <% @servers_list.each do |server| %>
      <%= imenu_link_to(server[:text], { :controller => "hardware_servers", :action => "show", :id => server[:server_id] }) %>
    <% end %>
  <% else %>
    <%= imenu_link_to(t('admin.menu.general.virtual_servers'), { :controller => "virtual_servers", :action => "list" }) %>
    <% @servers_list.each do |server| %>
      <%= imenu_link_to(server[:text], { :controller => "virtual_servers", :action => "show", :id => server[:server_id] }) %>
    <% end %>
  <% end %>
  <%= imenu_link_to(t('admin.menu.general.my_profile'), { :controller => "users", :action => "profile" }) %>
  <% if @current_user.superadmin? %>
    <%= imenu_link_to(t('admin.menu.general.users'), { :controller => "users", :action => "list" }) %>
    <%= imenu_link_to(t('admin.menu.general.tasks'), { :controller => "tasks", :action => "list" }) %>
    <%= imenu_link_to(t('admin.menu.general.event_log'), { :controller => "event_log", :action => "list" }) %>
  <% end %>
</ul> 
